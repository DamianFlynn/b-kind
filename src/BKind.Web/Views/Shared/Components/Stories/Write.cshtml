<div class="col mb-5">
    <h2>Share your story:</h2>
    <form asp-controller="Stories" asp-action="Share" method="post">
        @Html.AntiForgeryToken()
        <div class="form-group row">
            <label>Title:</label>
            <input type="text" name="StoryTitle"  class="form-control" >
            <small class="form-text text-muted">Add your story title. Focus on keeping the title under 70 characters.</small>
        </div>
        <div class="form-group row">
            <label>Content:</label>
            <textarea type="text" name="Content" class="form-control" rows="3"></textarea>
            <small class="form-text text-muted">Add your story.</small>
        </div>
        <input class="btn btn-primary" type="submit" value="Share" />
    </form>
</div>