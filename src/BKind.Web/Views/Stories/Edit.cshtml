@model BKind.Web.Features.Stories.Contracts.EditStoryInputModel

<form asp-controller="Stories" asp-action="Edit" method="POST">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Story.Id"/>
    <div class="form-group">
        <label asp-for="Story.Title">Title</label>
        <input type="text" asp-for="Story.Title" class="form-control"/>
        <span asp-validation-for="Story.Title"></span>
    </div>
    <div class="form-group">
        <label asp-for="Story.Content"></label>
        <input type="text" asp-for="Story.Content" class="form-control"/>
    </div>
    <input type="submit" value="Save"/>
</form>